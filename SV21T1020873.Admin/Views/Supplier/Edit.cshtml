@model SV21T1020873.DomainModels.Supplier
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/SaveData" method="post">

            <input type="hidden" name="@nameof(Model.SupplierID)" value="@Model.SupplierID" />

            <div class="form-group">
                <label>Tên nhà cung cấp:</label>
                <input type="text" class="form-control"
                       name="@nameof(Model.SupplierName)" value="@Model.SupplierName" autofocus />
                @Html.ValidationMessageFor(m => m.SupplierName)
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input type="text" class="form-control"
                       name="@nameof(Model.ContactName)" value="@Model.ContactName" />
                @Html.ValidationMessageFor(m => m.ContactName)
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <input type="text" class="form-control"
                       name="@nameof(Model.Phone)" value="@Model.Phone" />
                @Html.ValidationMessageFor(m => m.Phone)
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input type="text" class="form-control"
                       name="@nameof(Model.Email)" value="@Model.Email" />
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" class="form-control"
                       name="@nameof(Model.Address)" value="@Model.Address" />
                @Html.ValidationMessageFor(m => m.Address)
            </div>

            <div class="form-group">
                <label>Tỉnh/thành:</label>
                @Html.DropDownListFor(m => m.Provice, SelectListHeper.Provinces(), new { @class = "from-control" })
                @Html.ValidationMessageFor(m => m.Provice)
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Supplier" class="btn btn-default">
                    Quay lại
                </a>
            </div>

        </form>
    </div>
</div>