@model SV21T1020873.DomainModels.Customer
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Customer/SaveData" method="post">

            <input type="hidden" name="@nameof(Model.CustomerID)" value="@Model.CustomerID" />

            <div class="form-group">
                <label>Tên khách hàng:</label>
                <input type="text" class="form-control"
                       name="@nameof(Model.CustomerName)" value="@Model.CustomerName" autofocus />
                @Html.ValidationMessageFor(m => m.CustomerName)
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input type="text" class="form-control"
                       name="@nameof(Model.ContactName)" value="@Model.ContactName" />
                @Html.ValidationMessageFor(m => m.ContactName)
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <input type="text" class="form-control"
                       name="@nameof(Model.Phone)" value="@Model.Phone" />
                @Html.ValidationMessageFor(m => m.Phone)
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input type="text" class="form-control"
                       name="@nameof(Model.Email)" value="@Model.Email" />
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" class="form-control"
                       name="@nameof(Model.Address)" value="@Model.Address" />
                @Html.ValidationMessageFor(m => m.Address)
            </div>

            <div class="form-group">
                <label>Tỉnh/thành:</label>
                @Html.DropDownListFor(m => m.Province, SelectListHeper.Provinces(), new{ @class = "from-control"})
                @Html.ValidationMessageFor(m => m.Province)
            </div>

            <div class="checkbox">
                <label>
                    <input type="checkbox"/>
                    @Html.CheckBoxFor(m => m.IsLocked)  Tài khoản đang bị khóa
                </label>
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Customer" class="btn btn-default">
                    Quay lại
                </a>
            </div>

        </form>
    </div>
</div>